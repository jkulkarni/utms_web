<style>
div.main-container
{
background-image: url(<%= asset_path 'home/1.jpg' %>);
background-size:cover;
}
div.sub-container
{
background:white;border-radius:15px;border:3px solid #1673e6;margin-top:2%;margin-bottom:2%;padding:2%;
}
img#company-logo
{
display:block;margin-left:auto;margin-right:auto;height:auto;width:auto; padding-top:5%;margin-bottom:10%;
}
div#email-field
{
border-bottom:3px solid #1673e6;  width:80%;    margin:0px auto;
}
i.fa-envelope
{
font-size: 180%;display:inline-block;width:10%;float:initial;margin-left:5%;
color: #e6bd19;
margin-right: 2%;
}
div#password-field
{
border-bottom:3px solid #1673e6;  width:80%;    margin:0px auto;
}
i.fa-unlock-alt
{
font-size: 180%;display:inline-block;width:10%;float:initial;margin-left:5%;
margin-right: 2%;
color: #e6bd19;
}
input[placeholder="Email"]
{
margin:0px auto;
display:inline-block;
margin-top:5%;
width:70%;
border:none;
outline:none;
font-size:x-large;
padding-bottom: 3%;
}
input[placeholder="Password"]
{
margin:0px auto;
display:inline-block;
margin-top:10%;
width:70%;
border:none;
outline:none;
font-size:x-large;
padding-bottom: 3%;
}
input.submit
{
margin:0px auto;display:block;width:50%;font-size:x-large;border-radius:10px;background:#1673e6;color:white;margin-top:15%;font-family:&#39;Slackey&#39;
}
div.links {
font-size:150%;
padding:15%;
font-family:'Fredoka One';
padding-top:5%;
text-decoration:none;
}
focus:div.links {
font-size:100px;
}
::-webkit-input-placeholder {
color:lightgrey;
padding-left:5%;
font-family:sans-serif;
}
::-moz-placeholder {
color:lightgrey;
padding-left:5%;
font-family:'Fredoka One';
}
:-ms-input-placeholder {
color:lightgrey;
padding-left:5%;
font-family:'Fredoka One';
}
:-moz-placeholder {
color:lightgrey;
padding-left:5%;
font-family:'Fredoka One';
}
:focus::-webkit-input-placeholder {
color:#1673e6;
}
:focus::-moz-placeholder {
color:#1673e6;
}
:focus:-ms-input-placeholder {
color:#1673e6;
}
:focus:-moz-placeholder {
color:#1673e6;
}
/*EXTRA ON BASE CSS*/
input[placeholder="Confirm password"]
{
margin:0px auto;
display:inline-block;
margin-top:10%;
width:70%;
border:none;
outline:none;
font-size:x-large; 	
padding-bottom: 3%;
}
i.fa-lock
{
font-size: 180%;display:inline-block;width:10%;float:initial;margin-left:5%;
margin-right: 2%;
color: #e6bd19;
}

</style>
<div class="row main-container">
	<div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-12 sub-container" style="zoom:60%;">
		<img src="//cdn.shopify.com/s/files/1/0287/2238/t/1/assets/logo.png?8566483489350036091" id="company-logo" alt="CES">
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		<%= render 'layouts/error_messages', object: f.object %>
		<div id="email-field" >
			<i class="fa fa-envelope" aria-hidden="true"></i>
			<%= f.email_field :email, autofocus: true, placeholder: "Email" %>
		</div>
		<div id="password-field">
			<i class="fa fa-unlock-alt" aria-hidden="true" style=""></i>
			<%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
		</div>
		<div id="password-field">
			<i class="fa fa-lock" aria-hidden="true"></i>
			<%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>
		</div>
		<%= f.submit "SIGN UP", :class => 'btn btn-default submit' %>
		<% end %>
		<div class="row">
			<div class="links">
				<%= render "devise/shared/links" %>
			</div>
		</div>
	</div>
</div>